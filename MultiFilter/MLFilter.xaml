<UserControl x:Class="MultiFilter.MLFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MultiFilter"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             MinWidth="150" Background="Transparent" x:Name="UI" >
    <UserControl.Resources>
            <local:Icons x:Key="IconPaths" />
        <Style TargetType="Grid" x:Key="ButtonStyle">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightBlue" />
                </Trigger>
            </Style.Triggers>
            <Setter Property="Background" Value="White" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="30" Foreground="SlateGray" Padding="3,6,0,0" >
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=TxtFilter, Path=Text.Length}" Value="0">
                            <Setter Property="Content" Value="Filteren..." />
                        </DataTrigger>
                    </Style.Triggers>
                    <Setter Property="Content" Value="" />
                </Style>
            </Label.Style>
        </Label>
        <TextBox Background="Transparent" Width="150" Height="28" VerticalAlignment="Top" VerticalContentAlignment="Center" x:Name="TxtFilter" Text="" TextChanged="FilterTekst_TextChanged" PreviewMouseLeftButtonUp="TxtFilter_MouseDown" KeyUp="TxtFilter_KeyUp" />
        <Popup x:Name="Popup" MinWidth="200" Height="300" PopupAnimation="Slide" Placement="Bottom" PlacementTarget="{Binding ElementName=TxtFilter}">
            <Border BorderBrush="SlateGray" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Background="White">
                        <Grid>
                            <ListBox BorderThickness="0" VirtualizingStackPanel.VirtualizationMode="Recycling" x:Name="LstResultaten" Background="White">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="30" Style="{StaticResource ButtonStyle}" Background="Transparent" HorizontalAlignment="Stretch">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseUp">
                                                    <i:InvokeCommandAction Command="{Binding UitvoerenCommand}"/>
                                                    <i:InvokeCommandAction Command="{Binding FilterGekliktCommand,ElementName=UI}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Path Data="{Binding Icon.IconPad}" Fill="{Binding Icon.IconKleur}" Height="15" Width="15" Stretch="Uniform" Margin="5,0,5,0">

                                            </Path>
                                            <Label VerticalAlignment="Center" Grid.Column="1" Content="{Binding Filter.ShortCut}" Foreground="SlateGray" Margin="5,0,5,0" />
                                            <Label VerticalAlignment="Center" Grid.Column="2" Content="{Binding Model.Onderdeel }" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <TextBlock Foreground="SlateGray" Text="Er zijn geen resultaten die voldoen aan uw criteria..." x:Name="TxtInformatieOverFilter" Width="200" TextWrapping="Wrap" Margin="5" >
                            </TextBlock>
                        </Grid>
                            

                    </Grid>
                    <Grid Background="WhiteSmoke" Grid.Row="1" MinHeight="30">
                        <Border BorderBrush="SlateGray" BorderThickness="0" Margin="0,0,0,0">
                            <Grid >
                                <Grid Background="WhiteSmoke" ToolTip="Aantal actieve filters" VerticalAlignment="Center" HorizontalAlignment="Stretch" MouseUp="ButtonToonActieveFilters_MouseUp" Grid.Column="0">
                                    <TextBlock MaxWidth="190" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="TBLogischeFilter" Padding="5,0,0,0" Margin="2" Background="WhiteSmoke">

                                    </TextBlock>
                                    <TextBlock Visibility="Collapsed" MaxWidth="190" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="TBHuidigeFilter" Padding="5,0,0,0" Margin="2" Background="WhiteSmoke">

                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="2" Background="White" >
                        <WrapPanel Background="WhiteSmoke">
                            <ItemsControl Background="WhiteSmoke" ItemsSource="{Binding FilterOnderdelen,ElementName=UI}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="1" CornerRadius="2" Padding="3">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseUp">
                                                <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=SetShortCutCommand}" CommandParameter="{Binding ShortCut}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseEnter">
                                                <i:InvokeCommandAction Command="{Binding MouseOverCommand,ElementName=UI}" CommandParameter="{Binding Titel}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseLeave">
                                                <i:InvokeCommandAction Command="{Binding MouseOverCommand,ElementName=UI}" CommandParameter=""/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="LightBlue" />
                                                    </Trigger>
                                                </Style.Triggers>
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                        </Border.Style>
                                        <Path Data="{Binding Icon.IconPad}" Fill="{Binding Icon.IconKleur}" Height="15" Width="15" Margin="2" Stretch="Uniform">

                                        </Path>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                            <Border Margin="1" CornerRadius="2" Padding="3" MouseUp="FilterReset_MouseUp" >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseEnter">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=MouseOverCommand}" CommandParameter="Alle filters verwijderen"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseLeave">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=MouseOverCommand}" CommandParameter=""/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Border.Style>
                                    <Style TargetType="Border" >
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="LightBlue" />
                                            </Trigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=ActieveFilter.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Background" Value="Transparent" />
                                    </Style>
                                </Border.Style>
                                <Path Fill="Black" Height="15" Width="15" Margin="2" Stretch="Uniform" Data="{Binding Source={StaticResource IconPaths}, Path=Vuilbak}">

                                </Path>
                            </Border>
                        </WrapPanel>
                    </Grid>
                    
                </Grid>
            </Border>
        </Popup>
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="SlateGray" Margin="5,0,0,5" CornerRadius="3" x:Name="BorderLblEnOf" VerticalAlignment="Top">

            <Grid Background="SlateGray">
                <Label Grid.Column="1" x:Name="LblEnofOf" Foreground="WhiteSmoke" MouseUp="ButtonEnOf_MouseUp" >
                    <Label.Style>
                        <Style TargetType="Label">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True" >
                                    <Setter Property="Cursor"  Value="Hand"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
            </Grid>
        </Border>
        <ItemsControl Grid.Column="2" x:Name="FilterOverzicht" Background="Transparent" HorizontalAlignment="Stretch" MinHeight="35">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="CornflowerBlue" Margin="5,0,0,5" CornerRadius="3">
                        <Grid Background="CornflowerBlue" ToolTip="{Binding Filter.Titel}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Path Data="{Binding Icon.IconPad}" Fill="WhiteSmoke" Height="15" Width="15" Margin="5,0,0,0" Stretch="Uniform"/>
                            <Label Grid.Column="1" Content="{Binding Model.Onderdeel}" Foreground="WhiteSmoke" />
                            <Label Grid.Column="2" Content="x" Padding="0" MouseUp="ResultVerwijderen_Click" Tag="{Binding }" Margin="7,0,5,3" VerticalContentAlignment="Center" VerticalAlignment="Top" Foreground="White" >
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True" >
                                                <Setter Property="Cursor"  Value="Hand"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>